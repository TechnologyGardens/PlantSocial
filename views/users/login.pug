extends ../layout

block content
    h1 Sign-in or 
        a(href="/users/register") Register
    form(method="POST",action='/auth/login')
        #form-group
            a(class="btn btn-facebook" href="/auth/facebook") 
                i(class="fab fa-facebook")  Sign with Facebook  
            span                     
            a(class="btn btn-google" href="/auth/google") 
                i(class="fab fa-google")  Sign with Google
            span                     
            a(class="btn btn-twitter" href="/auth/twitter") 
                i(class="fab fa-twitter")  Sign with Twitter
            span                     
            a(class="btn btn-linkedin" href="/auth/linkedin") 
                i(class="fab fa-linkedin")  Sign with LinkedIn

        #form-group
            lable username:
            input.form-control(name="username",type="text")
        #form-group
            lable password:
            input.form-control(name="password",type="password")
        br
        input.btn.btn-primary(type="submit", value="Sign in")
